generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id    String     @id
  name String @default("")
  admin Boolean @default(false)
  teams Team[]
  mtgs Mtg[]
  deleted Boolean @default(false) @map("is_deleted")
}

model Team {
  id Int     @id @default(autoincrement())
  name String @default("")
  users User[]
  mtgs Mtg[]
  deleted Boolean @default(false) @map("is_deleted")
}

model Mtg {
  id Int     @id @default(autoincrement())
  startTime DateTime
  endTime DateTime
  users User[]
  agendas Agenda[]
  freeAgenda String?
  team Team @relation(fields: [teamId], references: [id])
  teamId Int
}

model Agenda {
  id Int     @id @default(autoincrement())
  agenda String
  mtg Mtg @relation(fields: [mtgId], references: [id], onDelete: Cascade)
  mtgId Int
}